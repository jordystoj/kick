.modal#offsideModal
    .modal-dialog
        .modal-content
            .modal-header
                .modal-title
                    h3 Add Offside
            .modal-body
                form(action="/dashboard/fixtures/"+fixture._id+"/offside", method="post")
                    //- Time Elapsed
                    .form-group
                        label(for="#elapsed") Elapsed
                        input.form-control.w-25(type="number" name="elapsed" id="elapsed")
                    
                    //- Team Id 
                    input(type="hidden", name="teamId" class="teamId")

                    //- Player
                    label(for="#player") Player
                    select.custom-select.player(name="playerId" id="player")
                        option(selected) Select Player

                    //- Assist
                    label.mt-2(for="#assist") Assist
                    select.custom-select.assist(name="assistId" id="assist")
                        option(selected) Select Player

                    //- Type
                    input(type="hidden", name="type" value="offside")

                    //- Detail
                    input(type="hidden", name="detail" value=" ")
                    
                    //- Comments
                    label.mt-2 Comments
                    input(type="text" name="comments" class="form-control" placeholder="eg. close call...")

                    input.mt-4.btn.btn-md.btn-success.w-100(type="submit", value="Add Offside")