h2 Add Fixture
br 
div(class="row center")
    div(class="col-sm-12 formPositioning")
        div(class="mb-3 mx-auto loginCards" style="max-width: 90%;")
            div(class="mx-auto")
                form(action="/dashboard/fixtures/add", method="post" style="max-width: 100%")
                    div(class="row")
                        div(class="col-md-3")

                        div(class="col-md-6")
                            div(class="form-group")
                                label() League
                                select.leagues(class="custom-select" class="form-control" id="league" name="league")
                                    option(selected) Select League
                                        each league in leagues
                                            option(value=league._id) #{league.leagueName.toUpperCase() +  " " + league.gender.toUpperCase() +  " " + league.age.toUpperCase() + " " + league.state.toUpperCase()}

                            div(class="form-group")
                                label() Date
                                input(type="date" class="form-control" name="date")
                            div(class="form-group")
                                label() Round
                                input(type="number" class="form-control" name="round" placeholder="Round: eg '3'")
                                                    
                            div(class="form-group")
                                label() Home Team
                                select(class="custom-select" class="form-control" name="homeTeam")
                                    option(selected) Select Team
                                        each team in teams
                                            option(value=team._id) #{team.teamName}

                            div(class="form-group")
                                label() Away Team
                                select(class="custom-select" class="form-control" name="awayTeam")
                                    option(selected) Select Team
                                        each team in teams
                                            option(value=team._id) #{team.teamName}


                            div(class="form-group")
                                label() Kick Off Time 
                                input(type="text" pattern="^([0-1][0-9]|[2][0-3]):([0-5][0-9])$" placeholder="HH:MM" class="form-control" name="kickofftime")
                                small(style="color:#999") HH:MM (24hr time)
                            button(type="submit" class="btn btn-success mb-4" style="width:100%;") Submit

                        div(class="col-md-3")

        